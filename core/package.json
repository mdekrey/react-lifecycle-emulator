    "mocha": "3.2.0",
    "react": "15.4.2",
    "ts-node": "3.0.2",
    "tslint": "4.5.1",
    "typescript": "2.2.1"
  },
  "peerDependencies": {
    "react": "^15.0.0"
  }
}
