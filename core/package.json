{
  "name": "@react-lifecycle-emulator/core",
  "version": "0.0.1-initial",
  "description": "Allows behavior-driven tests against React components",
  "license": "MIT",
  "repository": "https://github.com/mdekrey/react-lifecycle-emulator/tree/master/core",
  "keywords": [
    "react",
    "test"
  ],
  "contributors": [
    { "name": "Matthew DeKrey", "email": "matt.dekrey@gmail.com" }
  ],
  "bugs": {
    "url": "https://github.com/mdekrey/react-lifecycle-emulator/issues"
  },
  "homepage": "https://github.com/mdekrey/react-lifecycle-emulator#readme",
  "scripts": {
    "build": "npm run lint && npm run ts",
    "prepublishOnly": "npm run build && npm run test",
    "lint": "tslint --type-check --project ./tsconfig.json src/**/*.ts",
    "ts": "tsc",
    "test": "../node_modules/.bin/mocha ./src/**/*.test.{ts,tsx} --compilers ts:ts-node/register,tsx:ts-node/register"
  },

  "devDependencies": {
    "@types/mocha": "2.2.x",
    "@types/node": "7.0.x",
    "react": "15.4.2"
  },
  "peerDependencies": {
    "react": "^15.0.0"
  }
}